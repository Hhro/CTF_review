extends layout
block content
    .container
        #desc !{desc}
        #solvers first 5 solvers : <br>
            for solver,idx in solvers
                if idx == 0 
                    a.first(href ='/user/'+solver.nick) #{solver.nick} !{ (idx < solvers.length - 1) ? ', ' : ''}
                else if idx ==1
                    a.second(href ='/user/'+solver.nick) #{solver.nick} !{ (idx < solvers.length - 1) ? ', ' : ''}
                else if idx ==2
                    a.third(href ='/user/'+solver.nick) #{solver.nick} !{ (idx < solvers.length - 1) ? ', ' : ''}
                else if idx < 5
                    a.others #{solver.nick} #{ (idx < solvers.length - 1) ? ', ' : ''}
        .submit
            if solved
                .solved you already solved it
            else
                form.submit-flag(action='/chall/'+cid+'/submit' method='post')
                    input(type='text' name='flag' placeholder='FLAG{...}')
                    button.submit-btn(type='submit') Submit
        if msg
            p=msg
